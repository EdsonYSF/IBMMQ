                return 0.033;
                }else if(PREMIUM lt 3000000){
                return 0.03;
                }else if(PREMIUM lt 6000000){
                return 0.027;
                }else if(PREMIUM lt 10000000){
                return 0.024;
                }else if(PREMIUM lt 15000000){
                return 0.021;
                }else if(PREMIUM lt 30000000){
                return 0.018;
                }else if(PREMIUM ge 30000000){
                return 0.015;
                }
            </item>

            <item name="OVERVALUE">
                if(PREMIUM lt 2000000){
                return 0;
                }else if(PREMIUM lt 5000000){
                return 3600;
                }else if(PREMIUM lt 10000000){
                return 9000;
                }else if(PREMIUM ge 10000000){
                return 18000;
                }
            </item>

            <item name="OVERVALUE_TO">
                if(PREMIUM lt 2500000){
                return 0;
                }else if(PREMIUM lt 5200000){
