        <interest>
            <var name="MGT_FEE_RATE" param="M1" formula="M1 le 36 ? 0.0012 * 12: (M1 le 48 ? 0.0006*12 : 0)" /> <!-- 年度賬戶管理費用率 (AM) -->
            <var name="PRM" param="M1" formula="M1==1 ? PREMIUM : 0" /> <!-- 期繳保費，此處是躉交 -->
            <var name="PRM_T" param="M1" formula="(M1>0?IT.PRM_T(M1-1):0)+IT.PRM(M1)" /> <!-- 總保費，此處是躉交 -->

            <var name="S" param="M1" formula="M1>0?(M1 le 12 ? (PREMIUM*RATE)/12 : 0):0" /><!--首期保费费用-->
            <var name="Z" param="M1" formula="M1>0?(M1 le 1 ? PREMIUM*0.003 : 0):0" /><!--縂認購費用-->
            <var name="RELEVANT_PRM" param="M1" formula="IT.S(M1)+IT.Z(M1)+IT.AO(M1)" /><!--相關費用-->
            <var name="AO" param="M1" formula="PREMIUM ge 3000000 ? 0 :100" /><!--相關費用-->
            <var name="RELEVANT_PRM_SUMMARY" param="A1" formula="IT.RELEVANT_PRM(A1*12+1)+IT.RELEVANT_PRM(A1*12+2)+IT.RELEVANT_PRM(A1*12+3)+IT.RELEVANT_PRM(A1*12+4)+IT.RELEVANT_PRM(A1*12+5)+IT.RELEVANT_PRM(A1*12+6)+IT.RELEVANT_PRM(A1*12+7)+IT.RELEVANT_PRM(A1*12+8)+IT.RELEVANT_PRM(A1*12+9)+IT.RELEVANT_PRM(A1*12+10)+IT.RELEVANT_PRM(A1*12+11)+IT.RELEVANT_PRM(A1*12+12)" /> <!-- 相关费用汇总-->
            <var name="OVERVALUE_PRM" param="M1" formula="M1 ==37?OVERVALUE:0" /><!--超值回馈金-->
            <var name="OVERVALUE_PRM_TO" param="M1" formula="M1 ==37?OVERVALUE_TO:0" /><!--超值回馈金報酬率3-->

            <var name="AZ" param="M1,A2" formula="M1 le 0? 0:max(0,IT.AU(M1,A2))" /><!--月底AV部分解约后-->
            <var name="AU" param="M1,A2" formula="M1 le 0? 0:IT.AI(M1,A2)-IT.AT(M1,A2)-IT.AK(M1,A2)-IT.S(M1)" /><!--月底AV部分解约前-->
            <var name="AI" param="M1,A2" formula="IT.AG(M1,A2) * pow(1+A2,1.0/12.0) "/> <!-- 月底AV-->
            <var name="AT" param="M1,A2" formula="IT.AO(M1)"/> <!-- 月底AV-->
            <var name="AG" param="M1,A2" formula="M1 le (m+1)*12 ? IT.AA(M1)+IT.AZ(M1-1,A2)+IT.OVERVALUE_PRM(M1):0" /> <!-- 保單賬戶價值 按月初計 (AG) -->
            <var name="AA" param="M1" formula="IT.PRM(M1)-IT.Z(M1)"/> <!-- 月底AV-->
            <var name="BD_PAM" param="M1,A2" formula="IT.AZ(M1*12,A2)" /> <!-- 保單賬戶價值-->
            <var name="AK" param="M1,A2" formula="GENDER lt 1 ?IT.AJ(M1,A2)* F[int((M1-1)/12)+AGE]/10000 : IT.AJ(M1,A2)* M[int((M1-1)/12)+AGE]/10000" /> <!-- 危险保费 (AK) -->
