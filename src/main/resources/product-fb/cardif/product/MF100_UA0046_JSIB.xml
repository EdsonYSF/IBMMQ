        <interest>
            <var name="BO" param="M1" formula="RIDER('UDD002_JSIB')==null?0:(M1 lt 76-AGE?(GENDER == 2 ?RIDER('UDD002_JSIB').Q*UDDF[M1+AGE]:RIDER('UDD002_JSIB').Q*UDDM[M1+AGE]):0)"/><!--UDD_COL-->
